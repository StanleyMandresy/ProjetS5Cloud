{
  "version": 8,
  "name": "Antananarivo simple",
  "sources": {
    "antananarivo": {
      "type": "vector",
      "url": "mbtiles://{antananarivo}"
    }
  },
  "sprite": "",
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#e0e0e0" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "water",
      "paint": { "fill-color": "#a0c8f0" }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "paint": { "line-color": "#ffffff", "line-width": 2 }
    },
    {
      "id": "roads-labels",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": "{name}",
        "text-size": 12
      },
      "paint": {
        "text-color": "#333333"
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "building",
      "paint": { "fill-color": "#d0d0d0" }
    }
  ]
}
